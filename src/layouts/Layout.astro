---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	@font-face {
		font-family: "Inter", sans-serif;;
		src: url('/fonts/Inter-VariableFont_slnt,wght') format('ttf');
		font-weight: 500;
		font-style: normal;
		font-display: swap;
	}

	body {
		@apply font-inter bg-surface text-sm text-outline
	}
</style>


